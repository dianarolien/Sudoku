int i;

Sudoku::Sudoku()
{
	for(i=0;i<sudokusize;i++)
		map[i] = 0;
}

void Sudoku::setMap(int set_map[])
{
	for(i=0;i<sudokusize;i++)
		map[i] = set_map[i];
}

void Sudoku::giveQuestion()
{
	int q[sudokusize] = {8,4,0,1,0,0,0,0,6,0,0,3,0,0,0,2,0,0,0,0,0,6,0,5,0,4,0,1,0,0,0,0,0,0,0,5,0,9,0,4,0,8,0,6,0,3,0,0,0,0,0,0,0,9,0,1,0,7,0,3,0,0,0,0,0,6,0,0,0,9,0,0,4,0,0,0,0,6,0,5,3};
	setMap(q);
	for(i=0;i<sudokusize;i++)
		(i+1)%9!=0 ? cout<< q[i] << " " : cout<<map[i]<<endl;
}


void Sudoku::readIn()
{
	int r[sudokusize];
	for(i=0;i<sudokusize;i++)
		cin >> r[i];	
	setMap(r);
	for(i=0;i<sudokusize;i++)
		(i+1)%9!=0 ? cout<< map[i] << " " : cout<<map[i]<<endl;
}

void Sudoku::solve()
{
	int check[9];
	int solution;
	for(i=0;i<sudokusize;i++)
		check[i] = 0;
	
	/* check row */

	cout <<"qq"<<endl;
	for(i=0;i<sudokusize;i++)
		check[map[i]-1]++;
	for(i=0;i<sudokusize;i++)
		if(check[i]!=1)
		{
			solution = 0;
			cout << "0"<< endl;
			break;
		}


}

